<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/first"
        android:layout_width="350dp"
        android:layout_height="270dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1">
                <ImageView
                    android:src="@drawable/ic_question_person"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4">
                <TextView
                    android:id="@+id/txt_titleStartOut"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="Bạn Muốn Thoát ?"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="0.5">
                <Button
                    android:id="@+id/btn_outExam"
                    android:text="Đồng ý"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:backgroundTint="#FF5722"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>
                <Button
                    android:id="@+id/btn_cancelOutExam"
                    android:text="HỦY"
                    android:textColor="@color/white"
                    android:backgroundTint="#03A9F4"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/first"
        android:layout_marginTop="20dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
        <com.startapp.sdk.ads.banner.banner3d.Banner3D
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>