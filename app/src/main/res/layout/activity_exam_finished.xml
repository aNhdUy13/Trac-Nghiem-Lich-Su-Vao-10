<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fn.DeOnThi.DeOnThi_System">

    <com.startapp.sdk.ads.banner.banner3d.Banner3D
        android:elevation="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">
        <LinearLayout
            android:background="#03A9F4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="2"
            android:layout_weight="1.3">

            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="25dp"
                android:text="Kết Thúc"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#EDEDED"
            android:layout_weight="8.7">



            <androidx.cardview.widget.CardView
                android:layout_width="340dp"
                app:cardCornerRadius="10dp"
                android:layout_height="300dp">
                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:weightSum="2"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:gravity="center|left"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:text="Số Câu Đúng : "
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center|left"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/txt_showEnd_correctAns"
                                android:text="X"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:gravity="center|left"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:text="Số Câu Sai : "
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center|left"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/txt_showEnd_wrongAns"
                                android:text="X"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:weightSum="2"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:gravity="center|left"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:text="Số Câu Trống : "
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center|left"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/txt_showEnd_emptyAns"
                                android:text="X"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="340dp"
                android:layout_height="70dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btn_re_exam"
                        android:textStyle="bold"
                        android:backgroundTint="#03A9F4"
                        android:textColor="@color/white"
                        android:text="Quay Lại"
                        android:layout_marginRight="15dp"
                        android:visibility="gone"
                        android:layout_width="120dp"
                        android:layout_height="50dp"/>

                    <Button
                        android:id="@+id/btn_outFinished"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="THOÁT"
                        android:backgroundTint="#03A9F4"
                        android:layout_width="120dp"
                        android:layout_height="50dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>