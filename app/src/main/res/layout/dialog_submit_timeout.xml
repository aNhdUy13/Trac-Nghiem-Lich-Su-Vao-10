<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/first"
        android:layout_width="350dp"
        android:layout_height="470dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3">
                <TextView
                    android:id="@+id/txt_titleSubmitTimeout"
                    android:text="Hết Giờ"
                    android:background="#FF5722"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1.4">

                <GridView
                    android:id="@+id/gv_listQuestion_When_SubmitTimeout"
                    android:numColumns="3"
                    android:padding="5dp"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </GridView>

<!--                <TextView-->
<!--                    android:id="@+id/txt_content"-->
<!--                    android:gravity="center"-->
<!--                    android:textSize="16dp"-->
<!--                    android:layout_marginRight="10dp"-->
<!--                    android:text="Số Câu Đúng : "-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="match_parent"/>-->

<!--                <TextView-->
<!--                    android:id="@+id/txt_showNumberOfCorrectAns"-->
<!--                    android:gravity="center"-->
<!--                    android:textSize="16dp"-->
<!--                    android:text="0"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="match_parent"/>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="0.3">
                <Button
                    android:id="@+id/btn_showResult"
                    android:text="Kết Quả"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:backgroundTint="#FF5722"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_width="150dp"
                    android:layout_height="50dp"/>
                <Button
                    android:id="@+id/btn_out"
                    android:text="THOÁT"
                    android:textColor="@color/white"
                    android:backgroundTint="#03A9F4"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/first"
        android:layout_marginTop="20dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
        <com.startapp.sdk.ads.banner.banner3d.Banner3D
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>